<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SICLE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SICLE</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse ">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/categoria/index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/produto/index">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/configuracao/index">Configurações</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Acessos</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Acessos" asp-controller="Usuario" asp-action="Index">Usuários</a>

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Acessos" asp-controller="Perfil" asp-action="Index">Perfis</a>
                                <a class="dropdown-item" asp-area="Acessos" asp-controller="PerfilVenda" asp-action="Index">Perfis de Vendas</a>
                                <a class="dropdown-item" asp-area="Acessos" asp-controller="GrupoUsuario" asp-action="Index">Grupos de Usuários</a>

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Acessos" asp-controller="AssociacaoGrupoUsuarios" asp-action="Index">Associação Usuário em Grupos</a>
                                <a class="dropdown-item" asp-area="Acessos" asp-controller="AssociacaoUsuarioPerfil" asp-action="Index">Associação Usuário em Perfis</a>
                            </div>
                        </li>                
                    </ul>
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ProjMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
