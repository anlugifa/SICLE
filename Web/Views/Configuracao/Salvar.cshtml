@{   
    ViewData["Title"] = "Configuração";
}
@model Dominio.Entidades.Configuracao

<h2>Salvar Configuração</h2>

<div class="form-group">
    <div class="col-md-6">
        <label class="col-md-6 control-label">@ViewBag.Msg</label>
    </div>        
</div>

<form class="form-horizontal" asp-action="Salvar" asp-controller="Configuracao" method="POST">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Code">Code</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Code">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-1 control-label" for="Value">Valor</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Value">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success btn-sm">Save</button>
        </div>        
    </div>

</form>


