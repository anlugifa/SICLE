@model Dominio.Entidades.Produto

<h2>Salvar Produto</h2>

<div class="form-group">
    <div class="col-md-6">
        <label class="col-md-6 control-label">@ViewBag.Msg</label>
    </div>        
</div>

<form class="form-horizontal" asp-action="Salvar" asp-controller="Produto" method="POST">

    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Nome</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Categoria</label>
        <div class="col-md-2">
            <select class="form-control" asp-for="CategoriaId" data-val="false"
                asp-items='@(new SelectList(@ViewBag.Categorias, "Id", "Name", Model.CategoriaId))'>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success btn-sm">Save</button>
        </div>        
    </div>

</form>


