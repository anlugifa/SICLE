@{   
    ViewData["Title"] = "SICLE";
}
@model IEnumerable<Dominio.Entidades.Produto>

<h2>Todos Produtos</h2>

<a href="/Produto/Salvar" class="btn">Novo Produto</a>


<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Categoria.Name</td>
                        <td>
                            <a href="/Produto/Editar/@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        </td>
                        <td>
                            <a href="/Produto/Remover/@item.Id" class="btn btn-danger btn-sm">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

