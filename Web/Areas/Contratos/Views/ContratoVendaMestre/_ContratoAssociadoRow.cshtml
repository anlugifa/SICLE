@model ContratoVendaRow
@using Sicle.Web.Areas.Contratos.Models


<tr>
    <td><img src="@Model.Farol"/></td>
    <td>@Model.MaskId</td>
    <td><img src="@Model.FarolEndorsement"/></td>
    <td>@Model.StatusEndorsement</td>
    <td>@Model.Name</td>
    @* <td>@Model.Apelido</td> *@
    <td>@Model.ProductGroup</td>
    <td>@Model.ClientGroup</td>
    <td>@Model.Begin</td>
    <td>@Model.End</td>
    @* <td>@vm.Flexibilidade</td> *@
    <td>@Model.Status</td>
    <td>@Model.TotalVolume</td>
    <td>@Model.Period</td>
    @* <td>@vm.GrupoEconomico</td> *@
    @* <td>@vm.PrazoPagamento</td> *@
    
    <td>@Html.CheckBoxFor(modelItem => Model.IsAvailableForBroker, new { disabled = "disabled" })</td>
    <td>@Html.CheckBoxFor(modelItem => Model.IsActive, new { disabled = "disabled" })</td>
    <td>@Html.CheckBoxFor(modelItem => Model.IsForecast, new { disabled = "disabled" })</td>
    
    <td>@Model.MaxForecast</td>

    <td>
        @Html.ActionLink("Editar", "Editar", "ContratoVendaMI", new {id=@Model.Contrato.Id})
    </td>
    
</tr>
